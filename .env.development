# Village Calendar - Development Environment Variables
# Copy this file to .env.development.local and fill in your actual values
# .env.development.local is gitignored and safe for local credentials

# Google OAuth2 (Required for login)
# Get from: https://console.cloud.google.com/apis/credentials
export GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com"
export GOOGLE_CLIENT_SECRET="GOCSPX-YOUR_GOOGLE_SECRET"

# Facebook OAuth2 (Optional)
export FACEBOOK_CLIENT_ID="YOUR_FACEBOOK_APP_ID"
export FACEBOOK_CLIENT_SECRET="YOUR_FACEBOOK_SECRET"

# JWT Keys (will use classpath defaults if not set)
# export JWT_PRIVATE_KEY=$(cat ~/.village-secrets/jwt-private.pem)
# export JWT_PUBLIC_KEY=$(cat ~/.village-secrets/jwt-public.pem)

# Stripe Test Keys (for checkout)
# Get from: https://dashboard.stripe.com/test/apikeys
export STRIPE_SECRET_KEY="sk_test_YOUR_SECRET_KEY"
export STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_PUBLISHABLE_KEY"
export STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"

# Email (set MAIL_MOCK=false to send real emails)
export MAIL_MOCK="true"
export MAIL_FROM="noreply@localhost"
export MAIL_HOST="smtp.example.com"
export MAIL_PORT="587"
export MAIL_USERNAME="placeholder"
export MAIL_PASSWORD="placeholder"

# Cloudflare R2 Storage (for PDF storage)
export R2_ENDPOINT="https://placeholder.r2.cloudflarestorage.com"
export R2_BUCKET="calendar-pdfs-dev"
export R2_ACCESS_KEY="placeholder"
export R2_SECRET_KEY="placeholder"
export R2_PUBLIC_URL="https://localhost:8030"

echo "âœ… Development environment variables loaded"
echo ""
echo "Start the application with:"
echo "  mvn quarkus:dev"
